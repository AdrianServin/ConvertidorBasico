<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="@string/hello_world" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="54dp"
        android:layout_y="22dp"
        android:textStyle="bold"
        android:textSize="40dp"
        android:textColor="#2ecc71" />

    <RadioGroup
        android:id="@+id/radiogroup"
        android:layout_width="fill_parent"
        android:layout_height="103dp"
        android:layout_x="6dp"
        android:layout_y="144dp">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centigrados -> Fahrenheit"
            android:id="@+id/radioButton2"
            android:layout_x="36dp"
            android:layout_y="208dp" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Fahrenheit -> Centigrados"
            android:id="@+id/radioButton"
            android:layout_x="33dp"
            android:layout_y="138dp" />
    </RadioGroup>

    <EditText
        android:layout_width="214dp"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_x="73dp"
        android:layout_y="285dp"
        android:inputType="numberDecimal"
        android:hint="Ingresa °F o °C" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Convercion:"
        android:id="@+id/textView"
        android:layout_x="26dp"
        android:layout_y="401dp"
        android:textStyle="bold"
        android:textSize="25dp"
        android:textColor="#2ecc71" />

</AbsoluteLayout>
